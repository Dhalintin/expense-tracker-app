generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String    @unique
  password  String
  expenses  Expense[] 
  createdAt DateTime  @default(now())

  @@map("users")
}

model Expense {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  amount    Float
  category  String
  date      DateTime
  note      String?
  user      User     @relation(fields: [userId], references: [id])
  userId    String   @db.ObjectId
  createdAt DateTime @default(now())

  @@map("expenses")
}